import os
import time

bam_dir = "/content/ngs_project/bam"
ref_dir = "/content/ngs_project/reference"
fasta = f"{ref_dir}/Homo_sapiens_assembly38.fasta"
dbsnp = f"{ref_dir}/dbsnp_146.hg38.vcf.gz"
mills = f"{ref_dir}/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz"

bam_files = [
    ("tumor_bwamem2", "BWA-MEM2 Tumor"),
    ("normal_bwamem2", "BWA-MEM2 Normal"),
    ("tumor_bowtie2", "Bowtie2 Tumor"),
    ("normal_bowtie2", "Bowtie2 Normal"),
]

total_start = time.time()

for bam_name, label in bam_files:
    print(f"\n{'='*55}")
    print(f"ðŸ”§ {label} isleniyor...")
    print(f"{'='*55}")

    raw_bam = f"{bam_dir}/{bam_name}.bam"
    dedup_bam = f"{bam_dir}/{bam_name}.dedup.bam"
    recal_table = f"{bam_dir}/{bam_name}.recal.table"
    final_bam = f"{bam_dir}/{bam_name}.final.bam"
    metrics = f"{bam_dir}/{bam_name}.dedup_metrics.txt"

    # 1) MarkDuplicates
    print("  1/3 MarkDuplicates...")
    start = time.time()
    !gatk MarkDuplicates \
        -I {raw_bam} \
        -O {dedup_bam} \
        -M {metrics} \
        --CREATE_INDEX true \
        2>/dev/null
    print(f"      {(time.time()-start)/60:.1f} dk")

    # 2) BaseRecalibrator
    print("  2/3 BaseRecalibrator...")
    start = time.time()
    !gatk BaseRecalibrator \
        -I {dedup_bam} \
        -R {fasta} \
        --known-sites {dbsnp} \
        --known-sites {mills} \
        -O {recal_table} \
        2>/dev/null
    print(f"      {(time.time()-start)/60:.1f} dk")

    # 3) ApplyBQSR
    print("  3/3 ApplyBQSR...")
    start = time.time()
    !gatk ApplyBQSR \
        -I {dedup_bam} \
        -R {fasta} \
        --bqsr-recal-file {recal_table} \
        -O {final_bam} \
        2>/dev/null
    !samtools index -@ 26 {final_bam}
    print(f"      {(time.time()-start)/60:.1f} dk")

    # Sonuc
    if os.path.exists(final_bam):
        size = os.path.getsize(final_bam) / (1024**3)
        print(f"   {final_bam}: {size:.2f} GB")

        # Duplikat oranini metrics dosyasindan oku
        with open(metrics, 'r') as mf:
            for line in mf:
                if line.startswith("Unknown"):
                    parts = line.strip().split('\t')
                    dup_pct = float(parts[8]) * 100
                    print(f"   Duplikat orani: %{dup_pct:.1f}")
                    break
    else:
        print(f"   BASARISIZ!")

    # Ara dosyalari sil (yer kazanmak icin)
    !rm -f {raw_bam} {raw_bam}.bai {dedup_bam} {dedup_bam%.bam}.bai {recal_table}

total_elapsed = time.time() - total_start
print(f"\n{'='*55}")
print(f"  Toplam post-processing suresi: {total_elapsed/60:.1f} dk")
print(f"{'='*55}")

# Final BAM listesi
print("\nFinal BAM dosyalari:")
for f in sorted(os.listdir(bam_dir)):
    if f.endswith('.final.bam'):
        size = os.path.getsize(f"{bam_dir}/{f}") / (1024**3)
        print(f"   {f}: {size:.2f} GB")
