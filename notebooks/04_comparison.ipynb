import matplotlib
matplotlib.use('Agg')
import matplotlib.pyplot as plt
import numpy as np

pipe_labels = []
precisions = []
recalls = []
f1s = []
jaccards = []
total_calls_list = []

for pn in sorted(results.keys()):
    r = results[pn]
    pipe_labels.append(f"{r['mapper'].replace('BWA-MEM2','BWA')}\n{r['caller']}")
    precisions.append(r['precision'])
    recalls.append(r['recall'])
    f1s.append(r['f1'])
    jaccards.append(r['jaccard'])
    total_calls_list.append(r['total_calls'])

x = np.arange(len(pipe_labels))
w = 0.2

# FIGUR 1: Precision / Recall / F1
fig, ax = plt.subplots(figsize=(14, 7))
ax.bar(x - w, precisions, w, label='Precision', color='#2196F3', edgecolor='white')
ax.bar(x, recalls, w, label='Recall', color='#4CAF50', edgecolor='white')
ax.bar(x + w, f1s, w, label='F1-Score', color='#FF9800', edgecolor='white')
ax.set_xlabel('Pipeline', fontsize=13, fontweight='bold')
ax.set_ylabel('Score', fontsize=13, fontweight='bold')
ax.set_title('Pipeline Performance: Precision, Recall & F1-Score\nSEQC2 HCC1395 WES', fontsize=14, fontweight='bold')
ax.set_xticks(x)
ax.set_xticklabels(pipe_labels, fontsize=10)
ax.legend(fontsize=12)
ax.set_ylim(0, 1.05)
ax.grid(axis='y', alpha=0.3)
plt.tight_layout()
plt.savefig(f"{drive_fig}/precision_recall_f1.png", dpi=150, bbox_inches='tight')
plt.close()
print(f"  âœ… precision_recall_f1.png")

